<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <!-- shows item name and price -->
    <!-- Item ID -->

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/itemId"
            android:textColor="@color/darkOrange"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Item Name -->
        <TextView
            android:id="@+id/itemName"
            android:textColor="@color/antiquewhite"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </TextView>
        <!-- Item Price -->
        <TextView
            android:id="@+id/itemPrice"
            android:layout_below="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textSize="20sp" >

        </TextView>

    </RelativeLayout>

    <!-- shows + and - imageButton -->
    <RelativeLayout
        android:layout_width="111dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/plusBtn"
            android:background="@drawable/add_delete"
            android:text="@string/plus_sign"
            android:textSize="30dp"
            android:textColor="@color/brown"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/minusBtn"
            android:background="@drawable/add_delete"
            android:layout_toRightOf="@+id/plusBtn"
            android:text="@string/minus_sign"
            android:textSize="30dp"
            android:textColor="@color/brown"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp" />

    </RelativeLayout>


    <!-- show total price and no of items ordered -->

    <RelativeLayout
        android:layout_weight="2"
        android:background="@drawable/draw_background"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cost"
            android:hint="$"
            android:textSize="15dp"
            android:layout_margin="9dp"
            android:textColor="@color/darkOrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/no_of_items"
            android:text="0"
            android:textStyle="bold"
            android:layout_margin="9dp"
            android:paddingTop="4dp"
            android:textSize="15dp"
            android:textColor="@color/antiquewhite"

            android:layout_below="@+id/cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>

