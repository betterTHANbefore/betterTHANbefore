<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/draw_background"
    android:id="@+id/displaylayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/orderedItems_textview"
        android:id="@+id/ordertitle"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/antiquewhite"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!--<TextView-->
    <!--android:text="Items"-->
        <!--android:id="@+id/ordertitle"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:textAlignment="center"-->
        <!--android:gravity="center"-->
        <!--android:textColor="@color/antiquewhite"-->
        <!--android:textSize="35sp"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    <TextView
        android:id="@+id/tableNo_textview"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/brown"
        android:hint="Table #"
        android:textSize="30dp"
        android:layout_below="@+id/ordertitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!--<TextView-->
        <!--android:id="@+id/tableNo_textview"-->
        <!--android:text="Hello"-->
        <!--android:gravity="center"-->
        <!--android:textSize="50dp"-->
        <!---->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_below="@id/tableNo_textview"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/orderedlistLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/orderedItemName"
                android:hint="item name"
                android:textColor="@color/antiquewhite"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/orderednoOfItems"
                android:hint="no of Items"
                android:layout_marginLeft="30dp"
                android:textColor="@color/antiquewhite"

                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/orderedItemName"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/orderbutton"
        android:text="@string/order_button"
        android:textSize="25sp"
        android:textColor="@color/antiquewhite"
        android:background="@drawable/rounded_corner"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>