<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/draw_background"
    android:id="@+id/displaylayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/orderedItems_textview"
        android:id="@+id/ordertitle"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/antiquewhite"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tableNo_textview"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/brown"
        android:hint="Table #"
        android:textSize="30dp"
        android:layout_below="@+id/ordertitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_below="@id/tableNo_textview"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/orderedlistLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/orderedlist"
                android:hint="ordered list"

                android:textColor="@color/antiquewhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/namelabel"
                android:textSize="25sp" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/orderbutton"
        android:text="@string/order_button"
        android:textSize="25sp"
        android:textColor="@color/antiquewhite"
        android:background="@drawable/rounded_corner"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>