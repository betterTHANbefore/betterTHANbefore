<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/draw_background"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--    -->

    <ImageView
        android:src="@drawable/royalplate_logo"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"

        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/hostess_button"
            android:text="@string/hostess"
            android:textSize="20dp"
            android:background="@drawable/draw_button"
            android:layout_margin="20dp"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:textColor="@color/antiquewhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/waiter_button"
            android:text="@string/waiter"
            android:textSize="20dp"
            android:background="@drawable/draw_button"
            android:layout_margin="20dp"
            android:textColor="@color/antiquewhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/chef_button"
            android:text="@string/chef"
            android:textSize="20dp"
            android:background="@drawable/draw_button"
            android:layout_margin="20dp"
            android:textColor="@color/antiquewhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/manager_button"
            android:text="@string/manager"
            android:textSize="20dp"
            android:background="@drawable/draw_button"
            android:layout_margin="20dp"
            android:textColor="@color/antiquewhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>