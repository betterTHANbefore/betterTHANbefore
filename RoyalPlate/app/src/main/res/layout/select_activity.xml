<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/draw_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Image holder   -->
    <LinearLayout
        android:layout_weight="2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/royalplate_title"
        android:src="@drawable/royalplate_welcome"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Buttons holder   -->

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--left layout -->
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    <!--center layout -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/hostess_button"
                android:text="@string/hostess"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/waiter_button"
                android:text="@string/waiter"
                android:textSize="20dp"
                android:textStyle="bold"

                android:background="@drawable/rounded_corner"
                android:layout_margin="20dp"
                android:textColor="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/chef_button"
                android:text="@string/chef"
                android:textSize="20dp"
                android:textStyle="bold"

                android:background="@drawable/rounded_corner"
                android:layout_margin="20dp"
                android:textColor="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/manager_button"
                android:text="@string/manager"
                android:textSize="20dp"
                android:textStyle="bold"

                android:background="@drawable/rounded_corner"
                android:layout_margin="20dp"
                android:textColor="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!--right layout -->
         <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>
    </LinearLayout>


</LinearLayout>